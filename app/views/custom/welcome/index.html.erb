<% content_for :body_class, "home-page" %>

<% content_for :canonical do %>
  <%= render "shared/canonical", href: root_url %>
<% end %>

<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags",
              social_url: root_url,
              social_title: 'Gobierno abierto',
              social_description: 'Propuestas para el 4ª Plan de Acción' %>
<% end %>

<div class="jumbo highlight">
  <div class="row">
    <div class="small-12 medium-11 column pull-left">
      <p class="big-text margin-top-30 line-h-3_5">Proponé y Participá.</p>
      <p class="medium-text margin-top-30">Podes presentar propuestas, apoyarlas y hacer comentarios hasta el 15 de mayo de 2018.</p>
      <p class="medium-text margin-top-30">Las propuestas son ideas o iniciativas para fortalecer la transparencia, el acceso a la información pública, la rendición de cuentas, la participación y colaboración ciudadana.</p>

    </div>
  </div>
</div>

<% if feature?("user.recommendations") && (@recommended_debates.present? || @recommended_proposals.present?) %>
  <%= render "recommended",
              recommended_debates: @recommended_debates,
              recommended_proposals: @recommended_proposals %>
  <hr>
<% end %>
<div class="row">
  <p class="blue-text big-text line-h-3_5">Etapas del proceso de procreación</p>
</div>
<% cache [locale_and_user_status, @featured_debates, @featured_proposals, 'featured'] do %>
  <main>
    <div class="small-12 column text-center">
      <div class="row margin padding">
        <div class="small-12 medium-3 pull-left yellow-border column">
          <h2 class="blue-text">crear</h2>
          <p>tu propuesta de forma presencial o virtual</p>
          <p class="pull-right pull-top-1">Hasta el 15/5</p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <h2 class="blue-text">priorizar</h2>
          <p>los compromisos que se incorporarán</p>
          <p class="pull-right pull-top-2">Hasta el 08/6</p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <h2 class="blue-text">consultar</h2>
          <p>las propuestas a través de una consulta pública</p>
          <p class="pull-right pull-top-3">Hasta el 26/6</p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <h2 class="blue-text">aprobar</h2>
          <p>los compromisos definidos y publicarlos</p>
          <p class="pull-right pull-top-2">Hasta el 31/8</p>
        </div>
      </div>
    </div>
  </main>
<% end %>
