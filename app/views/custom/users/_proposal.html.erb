<tr id="proposal_<%= proposal.id %>">
  <td class="small-9">
    <strong><%= link_to proposal.title, proposal, proposal.retired? ? { class: 'retired' } : {} %></strong>
    <br>
    <%= proposal.summary %>
  </td>

  <% if proposal.retired? %>

    <td class="text-center" colspan="2">
      <span class="label color-blue">Propuesta eliminada</span>
    </td>

  <% elsif author?(proposal) %>

    <td>
      <% if proposal.permit_delete_or_edit? %>
        <% if proposal.retired? %>
          <span class="label color-blue">Propuesta eliminada</span>
        <% else %>
          <%= link_to "Eliminar",
                      retire_form_proposal_path(proposal),
                      class: 'button expanded' %>
        <% end %>
      <% else %>
        <span class="label color-blue">Esta propuesta no puede ser eliminada</span>
      <% end %>
    </td>

  <% else %>

    <td class="text-center" colspan="2">
      <%= link_to t('users.proposals.see'), proposal, class: 'button' %>
    </td>

  <% end %>

</tr>
