<% cache [locale_and_user_status, @current_order, commentable_cache_key(@proposal), @comment_tree.comments, @comment_tree.comment_authors, @proposal.aproved_comments_count, @comment_flags] do %>
  <div class="row comments">
    <div id="comments" class="small-12 column">
      <div data-alert class="callout warning margin-top pending-aproval" style="display: none;margin-bottom: 2.5rem;">
        <strong><%= t("proposals.comments.pending_aproval") %></strong>
      </div>
      <%= render 'shared/wide_order_selector', i18n_namespace: "comments" %>

      <% if user_signed_in? && Proposal.legislation_in_active_period? %>
        <%= render 'comments/form', {commentable: @proposal, parent_id: nil, toggeable: false} %>
      <% elsif !user_signed_in? %>
        <br>
          <div data-alert class="callout primary">
            <%= t("proposals.show.login_to_comment",
                signin: link_to(t("votes.signin"), new_user_session_path),
                signup: link_to(t("votes.signup"), new_user_registration_path)).html_safe %>
          </div>
      <% else %>
        <br>
        <div data-alert class="callout primary">
          <%= t("legislation_proposals.inactive",
                date_from: @proposal_date_from,
                date_to: @proposal_date_to).html_safe %>
        </div>
      <% end %>
      <% @comment_tree.root_comments.each do |comment| %>
        <%= render 'comments/comment', {comment: comment, inactive: !Proposal.legislation_in_active_period?} %>
      <% end %>
      <%= paginate @comment_tree.root_comments %>
    </div>
  </div> 
<% end %>
