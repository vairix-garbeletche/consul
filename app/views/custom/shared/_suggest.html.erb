<div class="small-12 column" >
  <% if @search_terms && @resources.any? %>
    <div class="callout warning">
      <p>
        <% if @is_proposal == 'false' %>
          <strong>
            <%= t("shared.suggest.legislation_proposal.found",
                count: @resources.count,
                query: @search_terms)%>
          </strong>
        <% else %>
          <strong>
            <%= t("shared.suggest.#{resource_name}.found",
                count: @resources.count,
                query: @search_terms)%>
          </strong>
        <% end %>
      </p>

      <% if @is_proposal == 'false' %>
        <ul>
          <% @resources.limit(@limit).each do |resource| %>
            <li><%= link_to resource.title, "#{resource.id}-#{resource.title}".parameterize  %></li>
          <% end %>
        </ul>
      <% else %>
        <ul>
          <% @resources.limit(@limit).each do |resource| %>
            <li><%= link_to resource.title, @resource_path_method.present? ? send(@resource_path_method, resource) : resource  %></li>
          <% end %>
        </ul>
      <% end %>

      <% if @resources.count > @limit %>
        <p>
          <strong>
            <%= t("shared.suggest.#{resource_name}.message",
                count: @resources.count,
                query: @search_terms,
                limit: @limit) %>
          </strong>
          <%= link_to t("shared.suggest.#{resource_name}.see_all"),
                      polymorphic_url(resource_model, search: @search_terms)%>
        </p>
      <% end %>

    </div>
  <% end %>
</div>
